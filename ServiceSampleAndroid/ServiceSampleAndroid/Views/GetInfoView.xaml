<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServiceSampleAndroid.Views.GetInfoView" BackgroundColor="#1abc9c">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="شماره مورد نظر را وارد کنید" TextColor="White" />
            <Entry Placeholder="9120000000" Text="{Binding TelephoneNumber}"/>
            <Button Command="{Binding SaveIntoDB}" Text="ثبت شماره" BackgroundColor="#303f9f"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>